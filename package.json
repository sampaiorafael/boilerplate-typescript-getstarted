{
	"name": "boilerplate-typescript-getstarted",
	"version": "1.0.0",
	"description": "typescript get started boilerplate",
	"main": "src/index.ts",
	"scripts": {
		"build": "tsc",
		"build:dev": "tsc -w",
		"start:ts": "ts-node-dev src/index.ts",
		"start:dev": "nodemon --watch ./src/**/* -e ts --exec npm run start:ts",
		"start:dev:js": "concurrently \"tsc -w\" \"nodemon dist/index.js\""
	},
		"repository": {
		"type": "git",	
		"url": "git+https://github.com/sampaiorafael/boilerplate-typescript-getstarted.git"
	},
	"keywords": [
		"boilerplate",
		"typescript",
		"getstarted"
	],
	"author": "Rafael Sampaio <rafasampaio021@hotmail.com>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/sampaiorafael/boilerplate-typescript-getstarted/issues"
	},
	"homepage": "https://github.com/sampaiorafael/boilerplate-typescript-getstarted#readme",
	"devDependencies": {
		"@types/node": "^17.0.23",
		"concurrently": "^7.1.0",
		"nodemon": "^2.0.15",
		"ts-node-dev": "^1.1.8",
		"typescript": "^4.6.3"
	}
}
